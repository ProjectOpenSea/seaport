{
  "name": "consideration",
  "version": "0.0.1",
  "description": "Consideration is a marketplace contract for safely and efficiently creating and fulfilling orders for ERC721 and ERC1155 items. Each order contains an arbitrary number of items that the offerer is willing to give (the \"offer\") along with an arbitrary number of items that must be received along with their respective receivers (the \"consideration\").",
  "main": "contracts/Consideration.sol",
  "author": "0age",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ethers": "^5.5.3",
    "ethers-eip712": "^0.2.0",
    "hardhat": "https://github.com/0age/hardhat/releases/download/viaIR-2.9.3/hardhat-v2.9.3.tgz"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@rari-capital/solmate": "^6.2.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.0",
    "ts-node": "^10.4.0",
    "typechain": "^8.0.0",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "async": ">=2.6.4",
    "lodash": ">=4.17.21",
    "node-fetch": ">=2.6.7",
    "underscore": ">=1.12.1",
    "yargs-parser": ">=5.0.1"
  },
  "scripts": {
    "build": "hardhat clean && hardhat compile",
    "echidna": " echidna-test contracts/Echidna.sol --contract Echidna --config ops/echidna.conf.yaml",
    "deploy": "hardhat clean && hardhat compile && bash ops/deploy.sh",
    "test": "hardhat test",
    "profile": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage --config hardhat-coverage.config.ts",
    "lint:check": "prettier --check **.sol && prettier --check **.js && prettier --check **.ts && hardhat compile && npx solhint 'contracts/**/*.sol'",
    "lint:fix": "prettier --write **.sol && prettier --write **.js && prettier --write **.ts"
  }
}
